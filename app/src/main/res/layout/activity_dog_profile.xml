<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/layoutDogProfile"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="shagold.wifwaf.DogProfileActivity"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dogProfileName"
            android:inputType="text" />

        <ImageView
            android:id="@+id/avatarDog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            tools:background="#AAA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_picture"
            android:id="@+id/selectImage"
            android:onClick="takePic"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dogAgeProfileValue"
            style="@style/Title.TextView"
            android:text="0" />

        <SeekBar
            android:id="@+id/ageDogProfileSeek"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:max="200"
            android:secondaryProgress="0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/description"
            style="@style/Title.TextView"
            android:id="@+id/dogProfileDescription" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dogProfileGender"
            android:prompt="@string/promptGender"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/breed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/breed"
            android:id="@+id/dogProfilebreed" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="@string/size"
            style="@style/Title.TextView"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dogSizeProfileValue"
            style="@style/Title.TextView"
            android:text="1" />

        <SeekBar
            android:id="@+id/sizeDogProfileSeek"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:max="9"
            android:progress="0"
            android:secondaryProgress="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Title.TextView"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="@string/behaviour" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/getAlongWithMales"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/getAlongWithMales"
            style="@style/Title.TextView"
            android:id="@+id/dogProfilegetAlongWithMales" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/getAlongWithFemales"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/getAlongWithFemales"
            style="@style/Title.TextView"
            android:id="@+id/dogProfilegetAlongWithFemales" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/getAlongWithKids"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/getAlongWithKids"
            style="@style/Title.TextView"
            android:id="@+id/dogProfilegetAlongWithKids" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/getAlongWithHumans"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            style="@style/Title.TextView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/getAlongWithHumans"
            style="@style/Title.TextView"
            android:id="@+id/dogProfilegetAlongWithHumans" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/applyChangeDogProfile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="saveChangeDog"/>

    </LinearLayout>
</ScrollView>