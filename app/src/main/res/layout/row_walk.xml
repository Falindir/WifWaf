<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/avatarRowWalk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:background="#AAA"
        />

    <TextView
        android:id="@+id/titleRowWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/avatarRowWalk"
        android:layout_alignTop="@+id/avatarRowWalk"
        android:textStyle="bold"
        tools:text="Title"
        />

    <TextView
        android:id="@+id/descriptionRowWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/titleRowWalk"
        android:layout_below="@+id/titleRowWalk"
        tools:text="default description"
        />

</RelativeLayout>