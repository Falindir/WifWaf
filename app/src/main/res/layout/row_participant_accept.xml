<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/nameRowUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/nameRowDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/nameRowUser"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        tools:text="@string/name" />

    <CheckBox
        android:id="@+id/validParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nameRowDog"
        android:layout_marginTop="20dp"
        android:text="@string/yes" />

    <CheckBox
        android:id="@+id/refuseParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/validParticipant"
        android:layout_marginTop="20dp"
        android:text="@string/no" />

</RelativeLayout>